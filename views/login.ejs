<% include ./partials/header %>

<div class="row">
    <div class='col-md-12'>
        <form class="form-signin" action="/login" method="post">
            <h1 class="h3 mb-3 font-weight-normal  text-center">Please Sign In</h1>

            <label for="inputUsername" class="sr-only">Username</label>
            <input type="text" id="inputUsername" class="form-control first-item-form" name='username' placeholder="Username" required autofocus>

            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control last-item-form" name='password' placeholder="Password" required>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </form>
        <form class="form-signin">
            <a href="/campgrounds">Go Back</a>
            <a id='pwd-reset-btn' href="/forgot">Forgot Password</a>
        </form>
    </div>
</div>

<% include ./partials/footer %>